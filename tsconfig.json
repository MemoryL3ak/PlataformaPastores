{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler", // ðŸ‘ˆ importante en Next 13/14/15
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // ðŸ‘ˆ habilita paths relativos al repo
    "paths": {
      "@/*": [
        "./src/*"
      ]
    } // ðŸ‘ˆ alias "@"
    ,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, "src/components/sidebar.tsx"  ],
  "exclude": [
    "node_modules"
  ]
}
